{{> menu}}

<div class="ui clearing segment">

  <h2 class="ui header">Edit User Account <br /><small>({{ mockUser.email }})</small></h2>
  <p>You may update the account details below.</p>

  <div class="ui divider"></div>

  {{#if success}}
    <div class="ui success message">
      <i class="close icon"></i>
      <div class="header">
        Account updated!
      </div>
      <p>The account has been successfully updated.</p>
    </div>
  {{/if}}

  {{#if error}}
    <div class="ui error message">
      <i class="close icon"></i>
      <div class="header">
        There was a problem updating the account
      </div>
      <p>{{ error }}</p>
    </div>
  {{/if}}
  <form action="/admin/users/edit/{{ mockUser.id }}/" method="post" class="ui form">
    <div class="required field">
      <label for="firstName">First Name</label>
      <input type="text" id="firstName" name="firstName" placeholder="First Name" value="{{ mockUser.firstName }}">
    </div>
    <div class="required field">
      <label for="lastName">Last Name</label>
      <input type="text" id="lastName" name="lastName" placeholder="Last Name" value="{{ mockUser.lastName }}">
    </div>
    <div class="required field">
      <label for="email">Email</label>
      <input type="email" id="email" name="email" placeholder="Email" value="{{ mockUser.email }}">
    </div>
    <div class="field">
      <label for="password">Password</label>
      <input type="password" id="password" name="password" placeholder="Password">
      <small>Leave field blank to leave password unchanged.</small>
    </div>
    <div class="field">
      <label for="isAdmin">Administrator</label>
      <div class="ui toggle checkbox">
        <input type="checkbox" {{#if mockUser.isAdmin}}checked="checked"{{/if}} tabindex="0" id="isAdmin" name="isAdmin" class="hidden">
      </div>
    </div>
    <button class="ui right floated secondary button">Update User</button>
  </form>

</div>
